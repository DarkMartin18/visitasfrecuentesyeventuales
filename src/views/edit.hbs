<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h1>Update Task</h1>

          <form action="/tasks/{{task._id}}/edit" method="post">
            <div class="mb-3">
              <input
                class="form-control"
                type="text"
                name="nombre"
                placeholder="Nombre de visitante"
                value="{{task.nombre}}"
              />
            </div>
            <div class="mb-3">
              <input
                class="form-control"
                name="fecha"
                type="date"
                placeholder="Fecha de visita"
                value="{{task.fecha}}"
              >
            </div>
            <div class="mb-3">
              <select class="form-control"
                class="form-control"
                name="tipo"
                placeholder="Tipo de visita">
              <option value="frecuente">Frecuente</option>
              <option value="eventual">Eventual</option>{{task.tipo}}</select>
            </div>
            <div class="mb-3">
              <textarea
                class="form-control"
                name="razon"
                placeholder="RazÃ³n de visita"
              >{{task.razon}}</textarea>
            </div>
            <button class="btn btn-primary" type="submit">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>