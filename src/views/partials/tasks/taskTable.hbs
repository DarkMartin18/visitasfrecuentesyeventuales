{{#if tasks}}
  <table class="table table-bordered table-hover custom-table">
    <thead>
      <tr>
        <th>N°</th>
        <th>Nombre</th>
        <th>Fecha</th>
        <th>Tipo</th>
        <th>Razón</th>
        <th>Estado</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td><strong>{{nombre}}</strong></td>
          <td>{{fecha}}</td>
          <td>{{tipo}}</td>
          <td>{{razon}}</td>
          <td>
            {{#if done}}
              <a
                class="btn btn-success"
                href="/tasks/{{_id}}/toggleDone"
              >Activar</a>
            {{else}}
              <a class="btn btn-dark" href="/tasks/{{_id}}/toggleDone">
                Desactivar
              </a>
            {{/if}}
            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">
              Borrar
            </a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">
              Editar
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>Sin datos</h1>
      <img src="/icons/empty.svg" class="w-75" />
    </div>

  </div>
{{/if}}